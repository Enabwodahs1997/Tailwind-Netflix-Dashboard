  "main": "index.js",
  "scripts": {
    "tw:build": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css --minify",
    "tw:watch": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css -w",
    "sass:build": "sass style.scss dist/style.css --no-source-map --style=compressed",
    "sass:watch": "sass style.scss dist/style.css --watch",
    "build": "npm-run-all tw:build sass:build",
    "serve": "vite",
    "site:build": "vite build",
    "site:preview": "vite preview",
    "dev": "npm-run-all -p tw:watch sass:watch serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
